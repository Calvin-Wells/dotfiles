! General config
Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! XTerm stuff
UXTerm*reverseVideo: false
UXTerm*borderColor: #282f39

!UXTerm*font: 7x13
!UXTerm*boldfont: 7x13bold
!
UXTerm.vt100.faceName: Bitstream Vera Sans Mono:size=9

UXTerm.termName: xterm-256color
UXTerm.vt100.bellIsUrgent: true

UXTerm*eightBitInput: false
UXTerm*eightBitOutput: true

UXTerm*VT100*translations:      #override \n\
               Shift <Key>Home:    copy-selection(SELECT) \n\
               Shift <Key>Insert:  copy-selection(SELECT) \n\
               Ctrl Shift <Key>C:  copy-selection(SELECT) \n\
               Ctrl Shift <Key>V:  insert-selection(SELECT)

! URxvt things
URxvt.depth:                      32
URxvt*scrollBar:                  false
URxvt*mouseWheelScrollPage:       false
URxvt*cursorBlink:                true
URxvt*saveLines:                  5000

URxvt.font: 7x13
URxvt.boldfont: 7x13bold


! Normal copy-paste keybindings without perls
URxvt.iso14755:                   false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard

!Xterm escape codes, word by word movement
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B

! Colours
UXTerm*background:		#282f39
UXTerm*foreground:		#d1d3d8

UXTerm*color0:      		#1a2227
