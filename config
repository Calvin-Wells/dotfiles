#i2 config file (v4)

# Some declarations at the start
set $mod Mod4
# Programs that will be later used
set $terminal uxterm
set $internet firefox
set $files pcmanfm-qt
set $email thunderbird
set $office libreoffice
set $music spotify

# Used to drag floating windows
floating_modifier $mod

# Hides the edbe borders when there is only one program
hide_edge_borders smart

# Default font
font pango: Noto Sans 8


## Launching programs ##
# Start a terminal and put it in the scratchpad
# for_window [window_role="__scratch"] move scratchpad 
# exec --no-startup-id pcmanfm -n -role __scratch

# Start a calc instance and put it on the scratchpad
# for_window [title="__calc"] move scratchpad
# exec --no-startup-id urxvt -fn 'xft:xos4 Terminus:size=20' -T __calc -e calc


bindsym $mod+Return exec $terminal

# Exec screen locker
bindsym $mod+shift+s exec loginctl lock-session

# Suspend
bindsym $mod+control+s exec systemctl suspend

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher
bindsym $mod+d exec --no-startup-id "dmenu_run"
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left



# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# toggle split orientation
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout stacking
bindsym $mod+e layout tabbed
bindsym $mod+r layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky for current window (only works for floating)
bindsym $mod+m sticky toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+s focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# use workspaces on different monitors
workspace "1" output DisplayPort-0
workspace "2" output DisplayPort-0
workspace "3" output DisplayPort-0
workspace "4" output DisplayPort-0
workspace "5" output DisplayPort-0
workspace "6" output HDMI-A-0
workspace "7" output HDMI-A-0
workspace "8" output HDMI-A-0
workspace "9" output HDMI-A-0
workspace "10" output HDMI-A-0

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Move to and show from scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Moving workspaces to different outputs
bindsym $mod+comma move workspace to output left
bindsym $mod+period move workspace to output right

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# toggle bar
bindsym $mod+b bar mode toggle

# Resize controls
bindsym $mod+control+h resize shrink width 10 px or 10 ppt
bindsym $mod+control+j resize grow height 10 px or 10 ppt
bindsym $mod+control+k resize shrink height 10 px or 10 ppt
bindsym $mod+control+l resize grow width 10 px or 10 ppt

# Keybinds for music when no media keys
bindsym $mod+p exec --no-startup-id sp play
bindsym $mod+bracketleft exec --no-startup-id sp prev
bindsym $mod+bracketright exec --no-startup-id sp next

# Media keys
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioPrev exec --no-startup-id mpc prev
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioStop exec --no-startup-id mpc stop
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id soundup
bindsym XF86AudioLowerVolume exec --no-startup-id sounddown
bindsym XF86MonBrightnessUp exec --no-startup-id brightup
bindsym XF86MonBrightnessDown exec --no-startup-id brightdown

# Mode for switching to hardcoded programs
set $launch "Launch: (G) Internet | (F) Files | (D) Email | (S) Office | (A) Music"
mode $launch
{
	bindsym g exec $internet, mode "default"
	bindsym f exec $files, mode "default"
	bindsym d exec $email, mode "default"
	bindsym s exec $office, mode "default"
	bindsym a exec $music, mode "default"

	bindsym $mod+g exec $internet, mode "default"
	bindsym $mod+f exec $files, mode "default"
	bindsym $mod+d exec $email, mode "default"
	bindsym $mod+s exec $office, mode "default"
	bindsym $mod+a exec $music, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+g mode $launch

### STANDALONE I3 STUFF ###
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command	i3blocks

        colors {
            background         $background-color-background
                statusline         $text-color-focused
                separator          $border-color-unfocused
                                    #border                         background                         text
                focused_workspace  $border-color-focused          $background-color-focused          $text-color-focused
                active_workspace   $border-color-focused_inactive $background-color-focused_inactive $text-color-focused_inactive
                inactive_workspace $border-color-unfocused        $background-color-unfocused        $text-color-unfocused
                urgent_workspace   $border-color-urgent           $background-color-urgent           $text-color-urgent
                binding_mode       $border-color-urgent           $background-color-urgent           $text-color-urgent
        }
}
# color variables for bar and windows
# (colors below are as follows: 
# 282F39 - Title bar from ARC 
# LA2227 - Border from ARC 
# 373D48 - Side bar from ARC 
# 5294E2 - Active from ARC 
# D1D3D8 - Alternative Side bar (white) from ARC 
# CC575D - Urgent From ARC 

        set $border-color-focused              #5294E2
        set $border-color-focused_inactive     #D1D3D8
        set $border-color-unfocused            #LA2227
        set $border-color-urgent               #CC575D
        set $border-color-placeholder          #00FF00
        set $border-color-background           #282f39
        set $background-color-focused          #5294E2
        set $background-color-focused_inactive #D1D3D8
        set $background-color-unfocused        #LA2227
        set $background-color-urgent           #CC575D
        set $background-color-placeholder      #00FF00 
        set $background-color-background       #282f39
        set $text-color-focused                #FFFFFF
set $text-color-focused_inactive       #FFFFFF
set $text-color-unfocused              #282f39
set $text-color-urgent                 #FFFFFF
set $text-color-placeholder            #FFFFFF
set $text-color-background             #FFFFFF

#                       border                         background                         text                         indicator
client.focused          $border-color-focused          $background-color-focused          $text-color-focused          #CC575D
client.focused_inactive $border-color-focused_inactive $background-color-focused_inactive $text-color-focused_inactive #CC575D
client.unfocused        $border-color-unfocused        $background-color-unfocused        $text-color-unfocused        #CC575D
client.urgent           $border-color-urgent           $background-color-urgent           $text-color-urgent           #CC575D
client.placeholder      $border-color-placeholder      $background-color-placeholder      $text-color-placeholder      #CC575D
client.background       $border-color-background       $background-color-background       $text-color-background       #CC575D

### GAPS ONLY CONFIG ###
# default_border pixel 1
# default_floating_border normal
# 
# gaps inner 10
# gaps outer 0
# 
# smart_gaps on

# Keybinds to turn gaps on and off
bindsym $mod+t gaps inner all set 0
bindsym $mod+y gaps inner all set 10

# Execute some startup applications
exec --no-startup-id bash ~/.fehbg
exec --no-startup-id blueman-applet
exec --no-startup-id nm-applet
exec --no-startup-id pasystray
exec --no-startup-id xss-lock -- i3lock -ec 000000
exec --no-startup-id pcmanfm-qt -d
exec --no-startup-id compton
exec --no-startup-id lxqt-notificationd
exec --no-startup-id kdeconnect-app
exec --no-startup-id kdeconnect-indicator
exec --no-startup-id dropbox start
exec --no-startup-id xbindkeys
